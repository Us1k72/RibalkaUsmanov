<Window x:Class="FunStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FunStore"
        mc:Ignorable="d"
        Title="MainWindow" Height="538" Width="1000" WindowStartupLocation="CenterScreen" 
        Background="Transparent"  WindowStyle="None"
        ResizeMode="NoResize" AllowsTransparency="True" WindowState="Normal">
    <Border CornerRadius="30" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="47*"/>
                <RowDefinition Height="450*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="FunStore" FontSize="30"></Label>
            <Frame NavigationUIVisibility="Hidden"  Name="MainFrame" VerticalAlignment="Center" Width="1000" Height="461" HorizontalAlignment="Center" Grid.Row="1"/>
            <Button Content="Закрыть!" HorizontalAlignment="Left" Margin="883,0,0,0" VerticalAlignment="Center" Height="29" Width="74" Click="Button_Click"/>
        </Grid>
    </Border>
</Window>
